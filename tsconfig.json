{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "lib": ["dom", "es6", "es2015", "es2016", "es2017"],
      "declaration": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "core/*": ["packages/core/dist/*"]
      },
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"]
  }
  